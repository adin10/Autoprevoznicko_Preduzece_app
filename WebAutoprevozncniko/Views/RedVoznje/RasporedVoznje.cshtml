        <div class="container">

            <div class="d-flex justify-content-between align-items-center" style="padding-top:20px">
                <h2>Red voznje </h2>
                @*<ol>
                        <li><a href="/Karta">Vrati nazad</a></li>
                        <li>Red voznje</li>
                    </ol>*@
            </div>
        </div>
    </section>

    <form class="table">
        <table>
            <tr>

                <th>Stanica polaska</th>
                <th>Stanica dolaska</th>
                <th>Vrijeme polaska</th>
                @*<td>Obrisi</td>
                    <td>Uredi</td>*@
            </tr>
            @foreach (RedVoznjePrikazVM rv in redvoznje)
            {
                <tr>

                    <td>@rv.LinijaPolaska</td>
                    <td>@rv.LinijaDolaska</td>
                    <td>@rv.vrijemePolaska</td>
                    @*<td>
                            <a href="/RedVoznje/Obrisi?ID=@rv.ID">Obrisi</a>
                        </td>
                        <td>
                            <a href="/RedVoznje/Uredi?ID=@rv.ID">Uredi</a>
                        </td>*@
                </tr>
            }
        </table>

    </form>
    <br />
    <a class="btn btn-secondary" href="/Home">Vrati nazad</a>
}
