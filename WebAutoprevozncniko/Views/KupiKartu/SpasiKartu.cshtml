
@using Autoprevoznicko_preduzece_HTS.Model;
@using WebAutoprevozncniko.ViewModels;
@{
    ViewData["Title"] = "Potvrda informacija";
    KupiKartu odabranaKarta = (KupiKartu)ViewData["Karta"];


}
<html>


<head>

    <title>Dodaj formu</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
</head>
<body>
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center" style="padding-top:40px">
                <h2>Dodaj kartu </h2>
                @*<ol>
                        <li><a href="/Karta">Vrati nazad</a></li>
                        <li>Dodaj kartu</li>
                    </ol>*@
            </div>


            <div id="Okvir">
                <form class="table" action="/KupiKartu/Placanje">
                    <div class="form-group" style="display:block; float:left; margin:20px; padding:20px">
                        <div class="form-group">
                            <input class="form-control" type="text" value="@odabranaKarta.ID" name="kartaID" readonly style="visibility:hidden" />
                        </div>
                        <div class="form-group">
                            <label>Ime i prezime</label>
                            <input class="form-control" type="text" value="@odabranaKarta.Ime" readonly />
                        </div>
                        <div class="form-group">
                            <label>Prezime</label>
                            <input class="form-control" type="text" value="@odabranaKarta.Prezime" readonly />
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input class="form-control" type="text" value="@odabranaKarta.Email" readonly />
                        </div>

                        @*<div class="form-group">
            <label>Broj telefona</label>
            <input class="form-control" type="text" value="@odabranaKarta.kupac.telefon" name="@odabranaKarta.kupac.telefon" readonly />
        </div>*@


                        <div class="form-group">
                            <label>Tip karte</label>
                            <input class="form-control" type="text" value="@odabranaKarta.tipKarte.naziv" name="tipKarteNaziv" readonly />
                        </div>

                        <div class="form-group">
                            <label>Vrsta karte</label>
                            <input class="form-control" type="text" value="@odabranaKarta.vrstaKarte.naziv" name="vrstaKarteNaziv" readonly />
                        </div>

                        <br />
                        <br />
                        <input class="form-control" type="submit" value="Plaćanje preuzećem" id="Preuzece" name="VrstaPlacanja" />
                    </div>
                    <div style="display:block; float:left; margin:20px; padding:20px">
                        <div class="form-group">
                            <label>Zona</label>
                            <input class="form-control" type="text" value="@odabranaKarta.gradskaLinija.zona.BrojZone" name="@odabranaKarta.gradskaLinija.zona.BrojZone" readonly />
                        </div>


                        <div class="form-group">
                            <label>Datum polaska</label>
                            <input class="form-control" type="text" value="@odabranaKarta.DatumVadjenjaKarte" name="@odabranaKarta.DatumVadjenjaKarte" readonly />
                        </div>


                        <div class="form-group">
                            <label>Broj telefona</label>
                            <input class="form-control" type="text" value="@odabranaKarta.DatumVazenjaKarte" name="@odabranaKarta.DatumVazenjaKarte" readonly />
                        </div>


                        <div class="form-group">
                            <label>Broj putnika</label>
                            <input class="form-control" type="text" value="@odabranaKarta.BrojPutnika" name="@odabranaKarta.BrojPutnika" readonly />
                        </div>
                        <div class="form-group">
                            <label>Pravac</label>
                            <input class="form-control" type="text" value="@odabranaKarta.Pravac" name="@odabranaKarta.Pravac" readonly />
                        </div>
                        <br />
                        <br />
                        <input class="form-control" type="submit" value="Online plaćanje" name="VrstaPlacanja" id="Online" />
                    </div>
                </form>
            </div>
            <br />
            <a class="btn btn-secondary" href="/Home">Vrati nazad</a>
        </div>
    </section>
</body>
</html>


